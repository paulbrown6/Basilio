<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
                xmlns:tools="http://schemas.android.com/tools"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                tools:context="com.example.paulbrown.basilio.fragments.FragmentHome" android:paddingTop="50dp">

    <ProgressBar
            style="?android:attr/progressBarStyleHorizontal"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentBottom="true" android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true" android:id="@+id/progressBar" android:layout_alignParentRight="true"
            android:layout_alignParentEnd="true"/>
    <EditText
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:inputType="textMultiLine"
            android:ems="10"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true" android:id="@+id/editText" android:layout_alignParentRight="true"
            android:layout_alignParentEnd="true"
            android:lines="1000"
            android:hint="Введите текст" android:layout_above="@+id/progressBar"
            style="@style/Widget.AppCompat.EditText"
            android:layout_alignParentTop="true" android:gravity="top" android:overScrollMode="ifContentScrolls"
            android:scrollbars="horizontal"/>

</RelativeLayout>
